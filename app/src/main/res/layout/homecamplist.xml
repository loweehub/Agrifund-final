<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardlist"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:id="@+id/DashCamImg"
                        android:src="@drawable/applg"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DashTitle"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_margin="10dp"
                        android:text="This is example for dashboard list"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DashRaised"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:text="0.00"/>

                    <Button android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:id="@+id/DonateBtnDash"
                        android:background="@drawable/btns"
                        android:layout_gravity="end"
                        android:layout_margin="15dp"
                        android:text="Donate"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>





</LinearLayout>